---
import Card from "./card.astro";
---

<Card style={Astro.props.style}>
    <h2>{Astro.props.title}</h2>
    <p>{Astro.props.description}</p>
    <img class="feature-card__icon" src={Astro.props.icon} alt="">
</Card>

<style is:global>
    .card
    {
        background: var(--clr-neutral-900);
        box-shadow: 0px 5px 10px 5px #939abe4d;
        border-radius: 6px;
        border-top: 4px solid var(--accent, black);
        
        max-width: 22rem;
        aspect-ratio: 4 / 3;
        padding: 1.5rem;

        font-size: 0.84375rem;
        position: relative;
        flex: 1;
    }

    .feature-card__icon
    {
        position: absolute;
        right: 1.5rem;
        bottom: 1.5rem;
    }
</style>

