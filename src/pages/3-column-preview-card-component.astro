---
import Page from "@layouts/page.astro";
import CarCard from "@components/3-column-preview-card-component/car-card.astro";
---

<Page title="3 Column Preview Card Component">
  <Fragment slot="head">
		<link rel="preload" href="fonts/big_shoulders_display/700.woff2" as="font" type="font/woff2" crossorigin>
		<link rel="preload" href="fonts/lexend_deca/400.woff2" as="font" type="font/woff2" crossorigin>
	</Fragment>
  <h1 class="visually-hidden">Car recommendations.</h1>
  <main>
    <CarCard 
      icon="3-column-preview-card-component/icon-sedans.svg"
      title="SEDANS"
      body="Choose a sedan for its affordability and excellent fuel economy.  Ideal for cruising in the city or on your next road trip."
      style="--bg:var(--clr-primary-400)"
    />
    <CarCard 
      icon="3-column-preview-card-component/icon-suvs.svg"
      title="SUVS"
      body="Take an SUV for its spacious interior, power, and versatility. Perfect for your next family vacation and off-road adventures."
      style="--bg:var(--clr-secondary-400);--delay:200ms;"
    />
    <CarCard 
      icon="3-column-preview-card-component/icon-luxury.svg"
      title="LUXURY"
      body="Cruise in the best car brands without the bloated prices. Enjoy the enhanced comfort of a luxury rental and arrive in style."
      style="--bg:var(--clr-secondary-300);--delay:400ms;"
    />
  </main>
</Page>

<style is:global>
  @font-face
  {
    font-family: body;
    src: local("Lexend Deca"),
      url("/frontendsolutions/fonts/lexend_deca/400.woff2") format("woff2"),
      url("/frontendsolutions/fonts/lexend_deca/400.woff") format("woff");
    font-weight: 400;
    font-display: swap;
  }
  
  @font-face
  {
    font-family: heading;
    src: local("Big Shoulders Display Bold"),
      url("/frontendsolutions/fonts/big_shoulders_display/700.woff2") format("woff2"),
      url("/frontendsolutions/fonts/big_shoulders_display/700.woff") format("woff");
    font-weight: 700;
    font-display: swap;
  }

  :root
  {
    --clr-primary-400: hsl(31, 77%, 52%);
    --clr-secondary-400: hsl(184, 100%, 22%);
    --clr-secondary-300: hsl(179, 100%, 13%);

    --clr-neutral-900: hsl(0, 0%, 95%);
    --clr-neutral-900a075: hsla(0, 0%, 100%, 0.75);

    background: var(--clr-neutral-900);
		color: var(--clr-neutral-900a075);

		line-height: 1.7;
    scrollbar-gutter: stable both-edges;

  }

  body
  {
    font-size: 0.9375rem;
  }

  h1, h2, h3
  {
    color: var(--clr-neutral-900);
    line-height: 1.38;
  }
  
  h2
  {
    font-size: 2.5rem;
  }

  main
  {
    box-sizing: border-box;
    padding: 5.5rem;
    display: grid;
		place-content: center;
    min-height: 100vh;
  }

  @media (min-width: 1024px)
  {
    main
    {
      margin-top: 20px;
      display: grid;
      grid-auto-flow: column;
    }
  }

</style>
