---
import Page from "@layouts/page.astro";
import StatsPreview from "@components/stats-preview-card-component/stats-preview.astro";
---

<Page title="Stats Preview Card Component">
	<Fragment slot="head">
		<link rel="preload" as="image" media="(max-width: 1279px)" href="stats-preview-card-component/image-header-mobile.avif" type="image/avif">
		<link rel="preload" as="image" media="(min-width: 1280px)" href="stats-preview-card-component/image-header-desktop.avif" type="image/avif">

		<link rel="preload" href="fonts/lexend_deca/300.woff2" as="font" type="font/woff2" crossorigin>
		<link rel="preload" href="fonts/inter/400.woff2" as="font" type="font/woff2" crossorigin>
		<link rel="preload" href="fonts/inter/700.woff2" as="font" type="font/woff2" crossorigin>
	</Fragment>
	<main>
		<StatsPreview />
	</main>
</Page>

<style is:global>
		@font-face
		{
			font-family: body;
			src: local("Inter"),
				url("/frontendsolutions/fonts/inter/400.woff2") format("woff2"),
				url("/frontendsolutions/fonts/inter/400.woff") format("woff");
			font-weight: 400;
			font-display: swap;
		}

		@font-face
		{
			font-family: body;
			src: local("Inter"),
				url("/frontendsolutions/fonts/inter/700.woff2") format("woff2"),
				url("/frontendsolutions/fonts/inter/700.woff") format("woff");
			font-weight: 700;
		font-display: swap;
		}

		@font-face
		{
			font-family: "Lexend Deca";
			src: local("Lexend Deca"),
				url("/frontendsolutions/fonts/lexend_deca/300.woff2") format("woff2"),
				url("/frontendsolutions/fonts/lexend_deca/300.woff") format("woff");
			font-weight: 300;
		font-display: swap;
		}

	html
	{
		--clr-primary-400: hsl(277, 64%, 61%);

		--clr-neutral-900: hsl(0, 0%, 100%);
		--clr-neutral-900a750: hsla(0, 0%, 100%, 0.75);
		--clr-neutral-900a600: hsla(0, 0%, 100%, 0.6);
		--clr-neutral-100: hsl(244, 38%, 16%);
		--clr-neutral-000: hsl(233, 47%, 7%);

		background: var(--clr-neutral-000);
		color: var(--clr-neutral-900a750);

		display: grid;
		place-content: center;
		font-size: 0.9375rem;
		line-height: 1.7;
	}

	h1, h2, h3
	{
		font-weight: 700;
		color: var(--clr-neutral-900);
		line-height: 1.1;
	}

	h1
	{
		font-size: 1.866rem;
	}

	.highlight
	{
		color: var(--clr-primary-400);
	}

	@media (min-width: 1280px)
	{
		h1
		{
			font-size: 2.375rem;
			line-height: 1.2;
		}
	}
</style>
